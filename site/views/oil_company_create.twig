{% extends "__layout.twig" %}

{% block content %}
<h1>Добавление нефтяной компании в список</h1>
<hr>

{% if message %}
<div class="alert alert-info">
    {{ message }}
    <a href="{{ url_group }}{{ id }}">открыть новый объект</a>
</div>
{% endif %}

<form action="" method="POST" class="row g-3" enctype="multipart/form-data">
    <div class="col-4">
        <label class="form-label">Название</label>
        <input type="text" class="form-control" name="title">
    </div>

    <div class="col-4">
        <label class="form-label">Краткое описание</label>
        <input type="text" class="form-control" name="description">
    </div>

    <div class="col-4">
        <label class="form-label">Тип</label>
        <select class="form-select" name="type">
            {% for type in types %}
            <option value="{{ type.type }}">{{ type.type|title }}</option>
            {% endfor %}
            <option value="new">new +</option>
        </select>
    </div>  

    <div class="mb-3">
        <label for="formFile" class="form-label">Выберите картинку</label>
        <input class="form-control" type="file" id="formFile" name="image">
    </div>

    <div class="col-12">
        <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5"></textarea>
    </div>

    <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>
{% endblock %}

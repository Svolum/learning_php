{% extends "__layout.twig" %}

{% block content %}
<h1>Редактирование нефтяной компании в список</h1>
<hr>

{% if message %}
<div class="alert alert-info">
    {{ message }}
    <a href="{{ url_group }}{{ id }}">открыть новый объект</a>
</div>
{% endif %}

<form action="" method="POST" class="row g-3" enctype="multipart/form-data">
    <div class="col-4">
        <label class="form-label">Название</label>
        <input type="text" class="form-control" name="title" value="{{ oil_comp.title }}">
    </div>

    <div class="col-4">
        <label class="form-label">Краткое описание</label>
        <input type="text" class="form-control" name="description" value="{{ oil_comp.description }}">
    </div>

    <div class="col-4">
        <label class="form-label">Тип</label>
        <select class="form-select" name="type">
            {% for type in types %}
                <option value="{{ type.type }}"
                    {% if type.type == oil_comp.type %}selected{% endif %}>
                    {{ type.type|title }}
                </option>
            {% endfor %}
        <option value="new">new +</option>
    </select>
    </div>

    <div class="col-12">
        <textarea name="info" placeholder="Полное описание..." class="form-control" rows="5">{{ oil_comp.info }}</textarea>
    </div>

    <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Изменить</button>
    </div>
</form>
{% endblock %}

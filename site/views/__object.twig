{% extends "__layout.twig" %}

{% block content %}
    <h1>{{ company.title }}</h1>
    <p>{{ company.description }}</p>
    <ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link {{ url == base_url ~ '?show=image' ? 'active' }}" aria-current="page" href="{{ base_url }}?show=image">Image</a>
    </li>
    <li class="nav-item">
        <a class="nav-link {{ url == base_url ~ '?show=info' ? 'active' }}" aria-current="page" href="{{ base_url }}?show=info">Description</a>
    </li>
    </ul>
    {% block object_content %}
    {% endblock %}
{% endblock %}